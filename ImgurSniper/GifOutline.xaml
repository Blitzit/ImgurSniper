<Window x:Class="ImgurSniper.GifOutline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImgurSniper"
        
        ForceCursor="True" Background="Transparent"
        ShowActivated="False" Focusable="False" ShowInTaskbar="False" Topmost="True"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize"
        Title="Capturing your GIF.." WindowStartupLocation="Manual" >
    
    <DockPanel>
        <Border DockPanel.Dock="Top" BorderThickness="2" BorderBrush="Gray" x:Name="Outline" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border.CornerRadius>3</Border.CornerRadius>
    </Border>
        <ProgressBar x:Name="ProgressBar" DockPanel.Dock="Bottom"/>
        
        <Label x:Name="Progress"></Label>
    </DockPanel>
</Window>
