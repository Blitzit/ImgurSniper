<Window x:Class="ImgurSniper.UI.VersionInfo"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ImgurSniper.UI"
		xmlns:cultureStrings="clr-namespace:ImgurSniper.UI.Properties"
		mc:Ignorable="d" ResizeMode="CanMinimize"
		Title="{x:Static Member=cultureStrings:strings.verInfo}" Height="400" Width="500">
	<Grid Margin="5">
		<StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,50">
			<Label FontSize="14" Content="{x:Static Member=cultureStrings:strings.changelog}"/>

            <ListView x:Name="listview" Height="280" Margin="2">
            </ListView>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Margin="5" Content="{x:Static Member=cultureStrings:strings.cancel}" Click="NoClick"/>
            <Button Margin="5" Content="{x:Static Member=cultureStrings:strings.update}" Click="YesClick"/>
        </StackPanel>
    </Grid>
</Window>
